<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dk.blekinge.diceroller.Buckets"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/count1"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:labelFor="@+id/D1"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/count2"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/D1" />

    <TextView
        android:id="@+id/count6"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:labelFor="@+id/D6"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintLeft_toRightOf="@+id/count5"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/D6" />

    <TextView
        android:id="@+id/count5"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:labelFor="@+id/D5"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintLeft_toRightOf="@+id/count4"
        app:layout_constraintRight_toLeftOf="@+id/count6"
        app:layout_constraintTop_toBottomOf="@+id/D5" />

    <TextView
        android:id="@+id/count4"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:labelFor="@+id/D4"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintLeft_toRightOf="@+id/count3"
        app:layout_constraintRight_toLeftOf="@+id/count5"
        app:layout_constraintTop_toBottomOf="@+id/D4" />

    <TextView
        android:id="@+id/count3"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:labelFor="@+id/D3"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintLeft_toRightOf="@+id/count2"
        app:layout_constraintRight_toLeftOf="@+id/count4"
        app:layout_constraintTop_toBottomOf="@+id/D3" />

    <TextView
        android:id="@+id/count2"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:labelFor="@+id/D2"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintLeft_toRightOf="@+id/count1"
        app:layout_constraintRight_toLeftOf="@+id/count3"
        app:layout_constraintTop_toBottomOf="@+id/D2" />

    <ImageButton
        android:id="@+id/D1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:onClick="toggleSelect"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/D2"
        app:srcCompat="@drawable/d1"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/Status" />

    <ImageButton
        android:id="@+id/D2"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:scaleType="centerCrop"
        android:onClick="toggleSelect"
        app:layout_constraintLeft_toRightOf="@+id/D1"
        app:layout_constraintRight_toLeftOf="@+id/D3"
        app:srcCompat="@drawable/d2"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/Status" />

    <ImageButton
        android:id="@+id/D3"
        android:layout_width="46dp"
        android:layout_height="45dp"
        android:scaleType="centerCrop"
        android:onClick="toggleSelect"
        app:layout_constraintLeft_toRightOf="@+id/D2"
        app:layout_constraintRight_toLeftOf="@+id/D4"
        app:srcCompat="@drawable/d3"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/Status" />

    <ImageButton
        android:id="@+id/D4"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:scaleType="centerCrop"
        android:onClick="toggleSelect"
        app:layout_constraintLeft_toRightOf="@+id/D3"
        app:layout_constraintRight_toLeftOf="@+id/D5"
        app:srcCompat="@drawable/d4"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/Status" />

    <ImageButton
        android:id="@+id/D5"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:scaleType="centerCrop"
        android:onClick="toggleSelect"
        app:layout_constraintLeft_toRightOf="@+id/D4"
        app:layout_constraintRight_toLeftOf="@+id/D6"
        app:srcCompat="@drawable/d5"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/Status" />

    <ImageButton
        android:id="@+id/D6"
        android:layout_width="46dp"
        android:layout_height="45dp"
        android:scaleType="centerCrop"
        android:onClick="toggleSelect"
        app:layout_constraintLeft_toRightOf="@+id/D5"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/d6"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/Status" />

    <Button
        android:id="@+id/Reroll_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="reroll"
        android:text="@string/Reroll_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/count3" />

    <Button
        android:id="@+id/Rollon_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="rollon"
        android:text="@string/Rollon_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Reroll_button" />

    <TextView
        android:id="@+id/Status"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp" />

</android.support.constraint.ConstraintLayout>
